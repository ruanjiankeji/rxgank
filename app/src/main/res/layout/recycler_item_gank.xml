<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="false"
    >
  <android.support.percent.PercentRelativeLayout
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      >
    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="centerCrop"
        tool:src="@drawable/ic_favorites"
        />
    <TextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/iv_header"
        android:background="@drawable/btn_selector"
        tool:text="代码家"
        style="@style/TextAppearance.AppCompat.Body1"
        />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/tv_source"
        android:background="@drawable/btn_selector"
        android:drawablePadding="@dimen/dp_10"
        android:drawableStart="@drawable/triangle"
        android:textColor="#959595"
        tool:text="休息视频"
        style="@style/TextAppearance.AppCompat.Body1"
        />


    <Button
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:text="分享"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        tool:text="ATM机不吐钞票却吐出了更多的惊喜和感动！"
        style="@style/TextAppearance.AppCompat.Body1"
        />
    <ImageView
        android:id="@+id/iv_meizi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_content"
        app:layout_aspectRatio="@fraction/header_aspectRatio"
        app:layout_widthPercent="100%"
        tool:src="@drawable/taylor_swift"
        />

    <View
        android:id="@+id/divider_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/iv_meizi"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="#20000000"
        />
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/divider_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_selector"
        tool:text="2016-07-14 11:30"
        style="@style/TextAppearance.AppCompat.Body1"
        />

  </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>